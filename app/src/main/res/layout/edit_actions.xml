<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonSave"
        android:layout_height="42dp"
        android:layout_width="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"
        android:text="next"
        android:textColor="#FFFFFF"
        android:onClick="toSettings"
        android:background="@drawable/custom_button"/>

    <CheckBox
        android:id="@+id/call911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="138dp"
        android:text="CALL 911"
        android:onClick="textboxChecked"/>
    <TextView
        android:id="@+id/call911info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:text="Call 911 with a built-in message reporting to responders your emergency, location, and situation."/>
    <CheckBox
        android:id="@+id/callContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:text="TEXT CONTACTS"
        android:onClick="textboxChecked"/>
    <TextView
        android:id="@+id/callContactsinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="390dp"
        android:text="Call an emergency contact and leave them a custom message and location."/>

</RelativeLayout>
